{
  "name": "ranker-app",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "docker:compose": "docker-compose up -d",
    "client:dev": "pnpm --filter client dev",
    "server:dev": "wait-on tcp:6379 && pnpm --filter server start:dev",
    "start": "concurrently -k -n docker,server,client -c yellow,green,blue \"pnpm docker:compose\" \"pnpm server:dev\" \"pnpm client:dev\"",
    "stop": "docker-compose down"
  },
  "devDependencies": {
    "concurrently": "^8.2.2",
    "wait-on": "^8.0.4"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "packageManager": "pnpm@10.13.1"
}
